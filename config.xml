<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.cenet.hotel"
        version   = "0.0.1">
    <name>Hotel</name>

    <description>
        Aplicaci√≥n para reservar habitaciones en un Hotel
    </description>

    <author href="http://www.ietlax.org.mx" email="netophp@gmail.com">
        netito alva
    </author>

    <feature name="http://api.phonegap.com/1.0/device" />

    <preference name="phonegap-version" value="2.3.0" />
    <preference name="orientation"      value="portrait" />
    <preference name="target-device"    value="universal" />
    <preference name="fullscreen"       value="true" />

    <icon src="logon.png" />
    <icon src="img/logon.png"   gap:platform="android"    gap:density="ldpi" />
    <icon src="img/logon.png"            gap:platform="ios"        width="57" height="57" />
    <gap:splash src="img/fondo.jpg"  gap:platform="android" gap:density="ldpi" />
    <gap:splash src="img/fondo.jpg"    gap:platform="ios"     width="320" height="480" />
	
	<access origin="*" subdomains="true" />
</widget>